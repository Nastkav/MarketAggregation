                            <div v-if="!loadRecomended">
                                <a v-for="item in SearchProducts.varus_products" v-on:click.prevent="SelectItem('varus',item)" v-bind:class="item.select ? 'active_prod latest-product__item' : 'latest-product__item'">
                                    <div style="position:relative;" class="latest-product__item__pic">
                                        <img :src="item.ImageUrl" alt="">
                                        <div v-if="!item.Availability" style="position: absolute; top:0;left:0;width:100%;height:100%;background-color:rgba(128, 128, 128, 0.4);"></div>
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>{{item.Name}}</h6> <b>{{item.Availability ? "" : "(Товар відсутній!)"}}</b>
                                    </div>
                                </a>
                            </div>
                            <div v-else class="text-center">
