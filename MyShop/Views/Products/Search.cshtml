@{
    ViewBag.Title = "Пошук";
}
<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>Всі відділи</span>
                    </div>
                    <ul>
                        @foreach (var item in MyShop.Helpers.Extension.comparison)
                        {
                            <li><a href="@Url.Action("Index","Products", new { category = item.Key })">@item.Value.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form" style="width: 100% !important;">
                        <form action="#">
                            <input v-model="search" type="text" placeholder="Що Вам потрібно?">
                            <button v-on:click.prevent="goSearch()" type="submit" class="site-btn">ПОШУК</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Результати пошуку за вашим запитом</h2>
                    <div class="breadcrumb__option">
                        <a href="javascript:void(0)">Оберіть товари для завершення процесу порівняння  та натисніть кнопку "Порівняти"</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <button v-if="!loadRecomended" v-on:click.prevent="goCompare()" style="margin: 20px auto !important;" type="submit" class="site-btn go_compare">Порівняти</button>
            </div>
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <div class="latest-product__text products_compare_varus">
